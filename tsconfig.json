{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "include": [".eslintrc.js"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/ds": ["components/DesignSystem/index"],
      "@/ds/*": ["components/DesignSystem/*"],
      "@/illustrations": ["components/illustrations/index"],
      "@/illustrations/*": ["components/illustrations/*"],
      "@/navigation": ["navigation/index"],
      "@/screens": ["screens/index"],
      "@/screens/*": ["screens/*"]
    }
  }
}
